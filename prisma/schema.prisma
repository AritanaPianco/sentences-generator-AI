generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
   id String @id @default(uuid())
   name String
   email String @unique
   password String

   words Word[]

   @@map("users")
}

model Word {
   id String @id @default(uuid())
   description String  

   user User? @relation(fields: [userId], references: [id])
   userId String?
   
   sentences Sentence[]

   @@map("words") 
}

model Sentence{
  id String @id @default(uuid())
  description String
  translation String

  word Word? @relation(fields: [wordId], references: [id])
  wordId String?

  @@map("sentences")

}

